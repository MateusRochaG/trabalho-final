<h1>Editar Animal</h1>

<form action="/animais/edicao/{{animal.id}}" method="POST">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" value="{{animal.nome}}" required><br>

    <label for="especie">Espécie:</label>
    <input type="text" id="especie" name="especie" value="{{animal.especie}}" required><br>

    <label for="raca">Raça:</label>
    <input type="text" id="raca" name="raca" value="{{animal.raca}}" required><br>

    <label for="idade">Idade:</label>
    <input type="number" id="idade" name="idade" value="{{animal.idade}}" required><br>

    <button type="submit">Salvar Alterações</button>
</form>
